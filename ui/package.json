{
	"name": "@tmible/wishlist-ui",
	"version": "2.0.1",
	"private": true,
	"description": "Общие элементы пользовательского интерфейса для портала со списками желаний и сервера с дашбордами",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tmible/wishlist.git",
		"directory": "ui"
	},
	"type": "module",
	"exports": {
		"./*": {
			"types": "./dist/*.d.ts",
			"svelte": "./dist/*.js",
			"import": "./dist/*.js"
		},
		"./theme/*": {
			"types": "./dist/theme/*.d.ts",
			"svelte": "./dist/theme/*.js",
			"import": "./dist/theme/*.js"
		},
		"./open-color.css": "./dist/open-color.css"
	},
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"scripts": {
		"package": "svelte-kit sync && svelte-package",
		"prepublishOnly": "pnpm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"lint": "eslint ./src",
		"lint:fix": "eslint --fix ./src",
		"test": "vitest run --coverage",
		"test:watch": "vitest --coverage",
		"test:prod": "vitest run",
		"update": "npm-check-updates",
		"release": "../scripts/release.sh"
	},
	"devDependencies": {
		"@sveltejs/kit": "2.20.1",
		"@sveltejs/package": "2.3.10",
		"@sveltejs/vite-plugin-svelte": "5.0.3",
		"@testing-library/svelte": "5.2.7",
		"@testing-library/user-event": "14.6.1",
		"@tmible/eslint-config-wishlist": "workspace:*",
		"@types/eslint": "9.6.1",
		"@vitest/coverage-v8": "3.0.9",
		"eslint": "9.22.0",
		"lucide-svelte": "0.483.0",
		"npm-check-updates": "17.1.15",
		"svelte-check": "4.1.5",
		"typescript": "5.8.2",
		"vite": "6.2.2",
		"vitest": "3.0.9"
	},
	"peerDependencies": {
		"@tmible/wishlist-common": "workspace:*",
		"bits-ui": "1.3.13",
		"lucide-svelte": "0.483.0",
		"svelte": "5.25.2"
	},
	"packageManager": "pnpm@10.2.0",
	"engines": {
		"node": "22.13.1",
		"pnpm": "10.2.0"
	}
}
