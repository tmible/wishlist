{
	"name": "@tmible/wishlist-common",
	"version": "1.0.0",
	"private": true,
	"description": "Общие элементы для телеграм бота и портала со списками желаний и сервера с дашбордами для них",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tmible/wishlist.git",
		"directory": "common"
	},
	"type": "module",
	"exports": {
		"./*": {
			"types": "./dist/*.d.ts",
			"svelte": "./dist/*.js",
			"import": "./dist/*.js"
		},
		"./constants/*": {
			"types": "./dist/constants/*.const.d.ts",
			"svelte": "./dist/constants/*.const.js",
			"import": "./dist/constants/*.const.js"
		}
	},
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"scripts": {
		"package": "svelte-kit sync && svelte-package",
		"prepublishOnly": "pnpm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"lint": "eslint ./src",
		"lint:fix": "eslint --fix ./src",
		"test": "vitest run --coverage",
		"test:watch": "vitest --coverage",
		"test:prod": "vitest run"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "^9.6.0",
		"@vitest/coverage-v8": "^2.0.0",
		"eslint": "^8.57.0",
		"eslint-plugin-array-func": "^4.0.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-jsdoc": "^48.5.0",
		"eslint-plugin-no-only-tests": "^3.1.0",
		"eslint-plugin-no-secrets": "^0.8.9",
		"eslint-plugin-optimize-regex": "^1.2.1",
		"eslint-plugin-prefer-arrow": "^1.2.3",
		"eslint-plugin-promise": "^6.2.0",
		"eslint-plugin-regexp": "^2.6.0",
		"eslint-plugin-security": "^2.1.1",
		"eslint-plugin-simple-import-sort": "^12.1.0",
		"eslint-plugin-sonarjs": "^0.24.0",
		"eslint-plugin-svelte": "^2.36.0",
		"eslint-plugin-unicorn": "^54.0.0",
		"globals": "^15.0.0",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"typescript": "^5.0.0",
		"vite": "^5.0.11",
		"vitest": "^2.0.0"
	},
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"packageManager": "pnpm@9.4.0",
	"engines": {
		"node": "22.3.0",
		"pnpm": "9.4.0"
	}
}
